<% if !user_signed_in?%>
<div class="jumbotron">
<h1>Your Favourite Movie Review</h1>
 <p>A simple shell for an h1 to appropriately space out and segment sections of content on a page. It can utilize the h1's default small element, as well as most other components (with additional styles</p>
  <p><%= link_to "SignUp", new_user_registration_path, :class=>"btn btn-primary btn-lg" %></p>
</div>
<%end%>


<div class="row">
<% @movies.each do |movie| %>
<div class="col-sm-6 col-md-3">
<div class="thumbnail">
<%= link_to (image_tag movie.image.url(:medium),:class=>"image"), movie_path(movie) %>
</div>
<%= link_to 'Show', movie_path(movie.id),:class => "btn btn-primary" %>
<%= link_to 'Edit', edit_movie_path(movie.id),:class => "btn btn-warning" %>
<%= link_to 'Destroy', movie_path(movie.id), method: :delete, data: { confirm: 'Are you sure?' },:class => "btn btn-danger" %>
</div>

<%end%>
</div>